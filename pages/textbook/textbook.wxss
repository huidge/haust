.search-view {
    background: #fff;
    height: 90rpx;
    margin: 15rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    text-align: center;
    vertical-align: middle;
    display: flex;
    padding: 0 20rpx;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #00aeef;
}

.search-text {
    line-height: 90rpx;
}

.search-icon {
    line-height: 90rpx;
    height: 45rpx;
}

.category {
    background: #fff;
    padding: 20rpx;
    margin: 15rpx;
}

.category .head {
    font-size: 16px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
}

.category .body {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 10rpx;
}

.category .body .item {
    margin-right: 20rpx;
    font-size: 30rpx;
    margin-top: 20rpx;
    text-align: center;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: #00aeef;
    border: none;
    padding: 10px;
    border-radius: 5px;
}

.hot {
    background: #fff;
    padding: 20rpx;
    margin: 15rpx;
}

.hot .head {
    font-size: 16px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
}

.hot .item {
    background: #fff;
    padding: 20rpx 10rpx;
    display: flex;
    align-items: stretch;
    border-bottom: 1px solid #eee;
}

.hot .item .left {
    width: 180rpx;
}

.hot .item .right {
    width: 550rpx;
    padding-left: 30rpx;
    position: relative;
    color: #9e9e9e;
    font-size: 14px;
}

.hot .item .cover-image {
    width: 180rpx;
    height: 240rpx;
}

.hot .item .item-name {
    font-size: 32rpx;
    color: #333;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-weight: 500;
}

.hot .item .item-desc {
    font-size: 26rpx;
    line-height: 1.5;
    display: block;
    margin-top: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.hot .item .num {
    color: #ff7927;
    font-weight: 700;
}