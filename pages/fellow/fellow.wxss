@import "../../__wuBaseWxss__/1.wxss";
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 10px;
    text-align: left;
}



.page__hd {
    padding: 30px;
}

.page__title {
    font-size: 1.5rem;
    text-align: center;
    color: #1AAD19;
}

.page__desc {
    text-align: center;
    margin-top: 5px;
    color: #888888;
    font-size: 14px;
}
.search-nav {
    display: flex;
    background-color: #fff;
    box-sizing: border-box;
    padding: 20rpx 30rpx 10rpx 30rpx;
    align-items: center;
}

.search-nav .view {
    display: flex;
    flex: 1;
    padding-left: 30rpx;
    background-color: #fff;
    border-radius: 4rpx;
    align-items: center;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1);
}

.search-nav .placeholder {
    color: #B2B2B2;
}

.search-nav .input {
    flex: 1;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 26rpx;
    color: #333;
    padding-left: 14rpx;
}

.search-nav .clean {
    padding: 30rpx;
}

.search-btn {
    background: none;
    color: #fff;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-right: -20rpx;
}
