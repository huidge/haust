.info {
    margin: 15rpx;
}

.info .head {
    background: #fff;
    padding: 20rpx;
}

.info .head text {
    font-size: 18px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
    font-weight: 700;
    overflow: hidden;
}

.info .body {
    padding: 15rpx 30rpx;
    display: flex;
    align-items: stretch;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.info .left {
    width: 180rpx;
}

.info .right {
    width: 550rpx;
    padding-left: 30rpx;
    position: relative;
    color: #9e9e9e;
    font-size: 14px;
}

.info .cover-image {
    width: 180rpx;
    height: 240rpx;
    border-radius: 10rpx;
}

.info .item-desc {
    font-size: 26rpx;
    color: #333;
    line-height: 1.5;
    display: block;
    margin-top: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.list {
    margin: 15rpx;
}

.list .head {
    background: #fff;
    display: flex;
}

.list .head .left {
    font-size: 16px;
    color: #202020;
    margin: 30rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 30rpx;
    flex: 4;
}

.list .head .right {
    flex: 4;
    text-align: right;
    font-size: 14px;
    margin: 30rpx;
    padding-right: 20rpx;
}

.list .head .right .num {
    font-size: 20px;
    font-weight: 500;
    color: #ea5a49;
}

.list .item {
    background-color: #fff;
    padding: 25rpx 30rpx;
    display: flex;
    align-items: stretch;
    border-bottom: 1px solid #eee;
}

.list .item .left {
    width: 80rpx;
}

.list .item .item-index {
    background: #00aeef;
    text-align: center;
    color: #fff;
    width: 60rpx;
    font-size: 32rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx 0;
    border-radius: 50%;
}

.list .item .right {
    width: 550rpx;
    padding-left: 10rpx;
    position: relative;
    color: #9e9e9e;
}

.item .item-name {
    font-size: 16px;
    color: #333;
    display: block;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-top: 15rpx;
    overflow: hidden;
}

.btn-area {
    margin: 20rpx;
    display: flex;
}

.btn-add {
    background: #00aeef;
    color: #fff;
    width: 180rpx;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.btn-delete {
    background: #666;
    color: #fff;
    width: 220rpx;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.btn-right {
    background: #00aeef;
    color: #fff;
    width: 180rpx;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 30rpx;
}

.index-btn {
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
    background: #00aeef;
    color: #fff;
    border-radius: 50%;
    font-size: 30rpx;
    line-height: 100rpx;
    text-align: center;
    width: 100rpx;
    height: 100rpx;
}