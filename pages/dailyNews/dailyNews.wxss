
page {
	width:100%;
  height: 100%;
  background: url('https://www.huidge.top/api/dailyNews/images/bg5.jpg') round fixed;
  background-color: #000;
}

.swiper_class{
	height:400rpx;
  margin:30rpx;
}
.slide-image{
	height:400rpx;
	width:100%;
  border-radius: 30rpx;
}

.list-container {
  width: 700rpx;
  padding: 10rpx  25rpx 90rpx 25rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.list{
	background-color:#fff;	
	position:relative;
	margin: 30rpx 4%;
	height:120rpx;
  border-radius: 25rpx;
  opacity: 0.7;
}
.item{
	height:10rpx;
  width:95%;
	float:left;
	margin-left:20rpx;
	margin-top:15rpx;
  font-size:30rpx;
	color:#000;
}

.btn{
  margin:0 20% 20%;
}

.button{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom:10rpx;
}
.morning{
  width: 81rpx;
  height:81rpx;
}
.hotspot{
  width: 81rpx;
  height:81rpx;
}
.title_selected{
  color:#d81e06
}

.title{
  position: absolute;
  left: 120rpx;
  top:10px;
  margin: 30rpx;
  color:#fff;
  font-size: 40rpx;
}

.date{
  position: absolute;
  left: 50rpx;
  top:160rpx;
  color:#fff;
  font-size: 80rpx;
}
.copyright{
  position: absolute;
  left: 10rpx;
  top:130px;
  margin: 30rpx;
  color:#fff;
  font-size: 30rpx;
}


@-webkit-keyframes hongbaoDrift {
    70% {
        right: -20%;
    }

    90% {
        right: 3%;
    }

    92% {
        transform: rotate(7deg);
        right: 3%;
    }

    94% {
        transform: rotate(-7deg);
        right: 3%;
    }

    96% {
        transform: rotate(7deg);
        right: 3%;
    }

    98% {
        transform: rotate(-7deg);
        right: 3%;
    }

    100% {
        transform: rotate(7deg);
        right: 3%;
    }
}

@keyframes hongbaoDrift {
    70% {
        right: -20%;
    }

    90% {
        right: 3%;
    }

    92% {
        transform: rotate(7deg);
        right: 3%;
    }

    94% {
        transform: rotate(-7deg);
        right: 3%;
    }

    96% {
        transform: rotate(7deg);
        right: 3%;
    }

    98% {
        transform: rotate(-7deg);
        right: 3%;
    }

    100% {
        transform: rotate(7deg);
        right: 3%;
    }
}

.share-tips {
    animation: hongbaoDrift 5s;
    animation-fill-mode: forwards;
    width: 18%;
    position: fixed;
    bottom: 150rpx;
    right: -20%;
}

.share-tips image {
    width: 100%;
    border-radius: 5px;
    box-shadow: 0 0 4px rgba(0,0,0,.4);
}

.black-cover {
    background: #000000;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    opacity: .5;
    z-index: 10;
}

.share-modal {
    width: 80%;
    position: fixed;
    left: 10%;
    top: 40%;
    background: #fff;
    z-index: 100;
    padding: 20px 20px 10px;
    box-sizing: border-box;
    border-radius: 3px;
    font-size: 16px;
    color: #000;
}

.share-btn-area {
    margin-top: 8px;
    float: right;
}

.confirm-share-btn {
    margin-left: 10px;
}