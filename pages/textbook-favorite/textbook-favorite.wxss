.favorite {
    background: #fff;
    padding: 20rpx;
    margin: 15rpx;
}

.favorite .head {
    font-size: 16px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
}

.favorite .head .num {
    color: #ff7927;
    font-weight: 700;
}

.favorite .body {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding-top: 30rpx;
}

.favorite .body .item {
    width: 320rpx;
    margin: 0rpx 10rpx 20rpx 10rpx;
    flex-shrink: 0;
}

.favorite .body .item .item-cover {
    width: 300rpx;
    height: 300rpx;
    position: relative;
}

.favorite .body .item .cover-img {
    width: 300rpx;
    height: 300rpx;
    border-radius: 8rpx;
}

.favorite .body .item .item-name {
    font-size: 26rpx;
    line-height: 1.5;
    margin-top: 10rpx;
    color: #444;
}