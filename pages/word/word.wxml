<view class="container">
  <view bindtap="audioPlay">
    <text class="word-content">{{content}}</text>
    <view class="pron-container">
        <image class="pron-icon" src="/images/pron-icon.png"></image>
        <text  class="word-pron">/{{pron}}/</text>
    </view>
  </view>
    <text class="word-definition" wx:if="{{showNot}}">{{definition}}</text>
    <view catchtap="show" class="{{button_miss}}">
        <text catchtap="show" class="word-miss">不认识</text>
    </view>
    <view catchtap="next" class="button-next">
        <text catchtap="next" class="word-next">下一个</text>
    </view>

</view>
