@font-face {
    font-family: Chalkboard;
    src: url(/assets/font/chalkboard.ttf-do-not-use-local-path-./pages/word/word.wxss&4&5),;
}

#head {
    width: 100%;
    text-align: center;
    margin-top: 10px;
    color: #777;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    justify-content: space-between;
    box-sizing: border-box;
}

.word-content {
    margin: 23rpx auto 18rpx;
    font-family: Chalkboard;
    font-size: 64rpx;
}

.pron-container {
    display: flex;
    flex-direction: row;
}

.pron-icon {
    width: 48rpx;
    height: 48rpx;
}

.word-pron {
    margin-left: 9rpx;
    font-family: Chalkboard;
    font-size: 36rpx;
    color: #8F8F8F;
}

.word-definition {
    margin-top: 194rpx;
    font-family: Yuanti TC;
    font-size: 30rpx;
    color: #585858;
}

.button-miss {
    display: flex;
    flex-direction: column;
    width: 360rpx;
    height: 70rpx;
    border: 2rpx solid #353535;
    border-radius: 10rpx;
    align-items: center;
    margin-top: 157rpx;
    margin-bottom: 37rpx;
}

.button-miss-hide {
    opacity: 0;
    flex-direction: column;
    width: 360rpx;
    height: 70rpx;
    border: 2rpx solid #353535;
    border-radius: 10rpx;
    align-items: center;
    margin-top: 157rpx;
    margin-bottom: 37rpx;
}
.word-miss {
    margin: auto;
    font-family: Songti TC;
    font-size: 32rpx;
    color: #585858;
}

.button-next {
    display: flex;
    flex-direction: column;
    width: 360rpx;
    height: 70rpx;
    border: 2rpx solid #353535;
    border-radius: 10rpx;
    align-items: center;
}

.word-next {
    margin: auto;
    font-family: Songti TC;
    font-size: 32rpx;
    color: #585858;
}

.zxgcz_foot {
    width: 100vw;
    height: 14vw;
    background: #fff;
    position: fixed;
    bottom: 0px;
    left: 0px;
    z-index: 99999;
    border-top: 1px solid #e8e8e8;
    padding-top: 1vw;
}

.zxgcz_foot .foot_ul {
    width: 25vw;
    height: 14vw;
    display: block;
    float: left;
    text-align: center;
}

.zxgcz_foot .foot_ul image {
    width: 6vw;
    height: 6vw;
    margin: 1vw;
}

.zxgcz_foot .foot_ul text {
    width: auto;
    height: 4vw;
    line-height: 4vw;
    font-size: 3vw;
    color: #333;
    display: block;
}