.search-from {
    display: flex;
}

.from-input {
    background: #fff;
    width: 630rpx;
    height: 90rpx;
    margin: 15rpx 0 0rpx 20rpx;
    border-radius: 10rpx;
    font-size: 32rpx;
    text-align: center;
    vertical-align: middle;
    display: flex;
    padding: 0 20rpx;
    justify-content: flex-start;
    align-items: center;
    border: 1px solid #00aeef;
}

.search-icon {
    line-height: 90rpx;
    height: 45rpx;
}

.search-input {
    text-align: left;
    padding-left: 15rpx;
    width: 100%;
}

.cancel-btn {
    font-size: 32rpx;
    height: 90rpx;
    line-height: 120rpx;
    width: 100rpx;
    text-align: center;
    color: #ea5a49;
}

.hot {
    background: #fff;
    padding: 20rpx;
    margin: 15rpx;
}

.hot .head {
    font-size: 16px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
}

.hot .body {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    padding-left: 10rpx;
}

.hot .body .item {
    margin-right: 20rpx;
    font-size: 14px;
    margin-top: 20rpx;
    text-align: center;
    align-items: center;
    color: #fff;
    background: #00aeef;
    border: none;
    padding: 10px;
    border-radius: 5px;
}

.data {
    background: #fff;
    padding: 20rpx;
    margin: 15rpx;
}

.data .head {
    font-size: 16px;
    color: #202020;
    margin: 10rpx;
    border-left: 6rpx solid #00aeef;
    padding-left: 20rpx;
}

.data .head .num {
    color: #ea5a49;
}

.no-result {
    margin: 20px;
}

.no-result text {
    color: red;
    font-size: 14px;
    line-height: 150%;
}

.request-btn {
    margin: 15px;
    background: #00aeef;
    color: #fff;
    font-size: 16px;
    height: 40px;
    line-height: 40px;
}

.data .item {
    background: #fff;
    padding: 20rpx 10rpx;
    display: flex;
    align-items: stretch;
    border-bottom: 1px solid #eee;
}

.data .item .left {
    width: 180rpx;
}

.data .item .right {
    width: 550rpx;
    padding-left: 30rpx;
    position: relative;
    color: #9e9e9e;
    font-size: 14px;
}

.item .cover-image {
    width: 180rpx;
    height: 240rpx;
}

.item .item-name {
    font-size: 32rpx;
    color: #333;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-weight: 500;
}

.item .item-desc {
    font-size: 26rpx;
    line-height: 1.5;
    display: block;
    margin-top: 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.item .num {
    color: #ff7927;
    font-weight: 700;
}