<wux-backdrop id="wux-backdrop" transparent="{{ true }}" />
<wux-animation-group wux-class="wux-toast" in="{{ in }}" class-names="wux-animate--fadeIn">
    <view class="wux-toast__bd {{ className }}">
        <view class="wux-toast__icon wux-toast__icon--loading"></view>
        <view class="wux-toast__text">{{ text }}</view>
    </view>
</wux-animation-group>